@model Aiursoft.MarkToHtml.Models.HomeViewModels.HomeViewModel
@inject IViewLocalizer Localizer

<div class="row mb-2 mb-xl-4">
    <div class="col-auto d-none d-sm-block">
        <h3>@Localizer["Welcome to MarkToHtml"]</h3>
        <p class="text-muted mb-0">@Localizer["Convert Markdown and draw Mermaid diagrams easily."]</p>
    </div>
    <div class="col-auto ms-auto text-end mt-n1">
        <img src="~/logo.svg" alt="logo" style="height:42px" />
    </div>
    <hr />
</div>

<div class="row g-3">
    <div class="col-md-6 d-flex">
        <div class="card flex-fill">
            <div class="card-body d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title mb-2">
                        <i class="align-middle" data-lucide="book-open-text">&nbsp;</i>
                        @Localizer["Markdown"]
                    </h4>
                    <p class="text-muted mb-3">@Localizer["Write Markdown on the left, preview sanitized HTML on the right, and save documents when signed in."]</p>
                    <div>
                        <a asp-controller="Markdown" asp-action="Index" class="btn btn-primary">
                            <i class="align-middle" data-lucide="arrow-right-circle">&nbsp;</i>@Localizer["Start Markdown"]
                        </a>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <a asp-controller="Markdown" asp-action="History" class="btn btn-outline-secondary ms-2">
                                <i class="align-middle" data-lucide="file-text">&nbsp;</i>@Localizer["My Markdown"]
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 d-flex">
        <div class="card flex-fill">
            <div class="card-body d-flex">
                <div class="flex-grow-1">
                    <h4 class="card-title mb-2">
                        <i class="align-middle" data-lucide="workflow">&nbsp;</i>
                        @Localizer["Mermaid"]
                    </h4>
                    <p class="text-muted mb-3">@Localizer["Type Mermaid syntax and preview SVG instantly. Save and manage your diagrams when signed in."]</p>
                    <div>
                        <a asp-controller="Mermaid" asp-action="Index" class="btn btn-primary">
                            <i class="align-middle" data-lucide="arrow-right-circle">&nbsp;</i>@Localizer["Start Mermaid"]
                        </a>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <a asp-controller="Mermaid" asp-action="History" class="btn btn-outline-secondary ms-2">
                                <i class="align-middle" data-lucide="file-text">&nbsp;</i>@Localizer["My Mermaid"]
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
